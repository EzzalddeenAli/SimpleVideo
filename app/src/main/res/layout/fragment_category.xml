<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="cn.liucr.simplevideo.module.main.viewmodel.CategoryViewModel" />

        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />

        <import type="com.liucr.bindinglibrary.viewmodel.state.StateViewModel" />

        <import type="android.view.View" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loadMoreListener="@{viewModel}"
            app:loadMoreState="@{viewModel.loadMoreState}"
            app:refreshListener="@{viewModel}"
            app:refreshState="@{viewModel.refreshState}">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{viewModel.stateViewModel.viewState == StateViewModel.State.STATE_CONTENT ? View.VISIBLE : View.GONE}"
                app:gridDecoration="@{5}"
                app:itemBinding="@{viewModel.itemBinding}"
                app:items="@{viewModel.items}"
                app:layoutManager="@{LayoutManagers.grid(2)}">

            </android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{viewModel.stateViewModel.viewState == StateViewModel.State.STATE_CONTENT ? View.GONE : View.VISIBLE}"
                android:background="@color/colorAccent"/>

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </android.support.constraint.ConstraintLayout>
</layout>
